<Window
    x:Class="Intron.LaserMonitor.Views.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fx="clr-namespace:Intron.LaserMonitor.Effects"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Intron.LaserMonitor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Intron.LaserMonitor.Views"
    xmlns:vm="clr-namespace:Intron.LaserMonitor.ViewModels"
    Title="Intron Laser Monitor"
    Width="1024"
    Height="600"
    mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MonitoringViewModel}">
            <views:MonitoringView />
        </DataTemplate>
        <!--<fx:InvertChromaKeyEffect
            x:Key="InvertKeyBlack"
            x:Shared="False"
            KeyColor="Black"
            Softness="0.06"
            Tolerance="0.12" />-->

        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="SideMenu" Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="86" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="190" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="SideMenu" Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="0" Value="190" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="86" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="MouseEnter" SourceName="SideMenu">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseLeave" SourceName="SideMenu">
            <BeginStoryboard Storyboard="{StaticResource CloseMenu}" />
        </EventTrigger>
    </Window.Triggers>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="MouseEnter" SourceName="SideMenu">
            <i:InvokeCommandAction Command="{Binding OpenMenuCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="MouseLeave" SourceName="SideMenu">
            <i:InvokeCommandAction Command="{Binding OpenMenuCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="64" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="SideMenu"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Width="86"
            HorizontalAlignment="Left"
            Background="{DynamicResource White}"
            Grid.ZIndex="3">
            <Border BorderBrush="Gray" BorderThickness="0,0,1.2,0" />
            <StackPanel>
                <StackPanel>
                    <DockPanel
                        Width="50"
                        Height="50"
                        Margin="18,8,0,18"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource White}"
                        Visibility="{Binding LogoCloseMenu}">
                        <Viewbox>
                            <Image Source="/Assets/Images/logo-intron-50.png" Stretch="None" />
                        </Viewbox>
                    </DockPanel>

                    <DockPanel
                        Width="154"
                        Height="50"
                        Margin="18,8,0,18"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource White}"
                        Visibility="{Binding LogoOpenMenu}">

                        <Button
                            Margin="0"
                            Padding="0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Command="{Binding OpenMainWindowCommand}"
                            Cursor="Hand">
                            <Viewbox>
                                <Image Source="/Assets/Images/logo-name-min-50.png" Stretch="None" />
                            </Viewbox>
                        </Button>
                    </DockPanel>

                </StackPanel>

                <StackPanel>
                    <ItemsControl ItemsSource="{Binding Path=MenuItemModelList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Button
                                        Width="{Binding ButtonWidth}"
                                        Height="48"
                                        BorderBrush="{DynamicResource White}"
                                        Command="{Binding ActionCommand}"
                                        Cursor="Hand">

                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Background" Value="{DynamicResource White}" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{DynamicResource White}"
                                                                BorderThickness="1">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition MaxWidth="50" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Image
                                                                        x:Name="buttonImage"
                                                                        Grid.Column="0"
                                                                        Width="18"
                                                                        Height="18"
                                                                        Margin="12,0,0,0"
                                                                        VerticalAlignment="Center"
                                                                        gif:ImageBehavior.AnimatedSource="{Binding ImagePath}"
                                                                        CacheMode="BitmapCache" />

                                                                    <TextBlock
                                                                        Grid.Column="1"
                                                                        Width="140"
                                                                        Margin="12,0,0,0"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        FontFamily="{DynamicResource Inter}"
                                                                        FontSize="9pt"
                                                                        FontWeight="Medium"
                                                                        Text="{Binding Title}"
                                                                        Visibility="{Binding TextVisibility}">
                                                                        <TextBlock.Style>
                                                                            <Style TargetType="TextBlock">
                                                                                <Setter Property="Foreground" Value="Gray" />
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                                        <Setter Property="Foreground" Value="{DynamicResource White}" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
                                                                </Grid>
                                                            </Border>

                                                            <ControlTemplate.Triggers>
                                                                <!--  Pode usar Trigger direto em vez de DataTrigger  -->
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <!--<Setter TargetName="buttonImage"
                                                                            Property="Effect"
                                                                            Value="{StaticResource InvertKeyBlack}" />-->
                                                                    <Setter TargetName="buttonImage" Property="gif:ImageBehavior.AnimatedSource" Value="{Binding SelectedImagePath}" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>


                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>

                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource IntronBlue}" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid
            x:Name="TopMenu"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="{StaticResource White}"
            Grid.ZIndex="2">

            <Border BorderBrush="{DynamicResource BorderGray}" BorderThickness="0,0,0,1.2" />

            <DockPanel x:Name="TopBar" Margin="96,0,0,0">

                <DockPanel
                    x:Name="DeviceConnection"
                    Height="50"
                    Margin="{Binding DeviceConnectionMargin}"
                    Background="{DynamicResource White}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="49*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40pt" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Border
                            Grid.RowSpan="2"
                            Grid.ColumnSpan="3"
                            BorderBrush="{DynamicResource BorderGray}"
                            BorderThickness="1"
                            CornerRadius="6" />

                        <Image
                            Width="24"
                            Height="24"
                            Margin="0,13,0,12"
                            HorizontalAlignment="Center"
                            Source="{Binding DeviceConnectionImage}"
                            Stretch="Uniform" />

                        <TextBlock
                            x:Name="DeviceConnectionTextBlock"
                            Grid.Column="1"
                            Width="100"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Inter}"
                            FontSize="9pt"
                            FontWeight="Medium"
                            Foreground="{StaticResource MenuFontGray}"
                            Text="{Binding DeviceConnectionText}"
                            TextWrapping="Wrap" />
                        <Ellipse
                            Grid.Column="3"
                            Width="10"
                            Height="10"
                            Margin="0,0,10,0"
                            Fill="{Binding EllipseConnectionColor, Mode=OneWay}" />
                    </Grid>
                </DockPanel>

                <DockPanel HorizontalAlignment="Left">
                    <!--<DockPanel Margin="0, 0, 6, 0">
                        <TextBlock Text="Console : "
                                   FontFamily="{StaticResource Inter}"
                                   FontSize="8pt"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource MenuFontGray}"></TextBlock>
                    </DockPanel>-->
                    <!--<DockPanel>
                        <Border CornerRadius="6"
                                Width="160pt"
                                Height="20pt"
                                Margin="0,0,20,0"
                                Background="{DynamicResource BackgroundGray}">
                            <TextBlock Text="{Binding MainApplicationStateText}"
                                       FontFamily="{StaticResource Inter}"
                                       FontSize="8pt"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFontGray}">
                            </TextBlock>
                        </Border>
                    </DockPanel>-->
                    <DockPanel x:Name="Reconnection" Margin="0,0,10,0">
                        <ComboBox Width="100"
                                  Height="30"
                                  Margin="15, 0, 10, 0"
                                  Cursor="Hand"
                                  Text="Porta COM">
                            <ComboBoxItem Content="COM1" />
                            <ComboBoxItem Content="TEST2" />
                            <ComboBoxItem Content="TESTE3" />
                            <ComboBoxItem Content="TEST4" />
                            <ComboBox.Style>
                                <Style TargetType="{x:Type ComboBox}">
                                    <Setter Property="Background"
                                            Value="{DynamicResource BackgroundGray}" />
                                    <Setter Property="BorderBrush"
                                            Value="{DynamicResource BorderGray}" />
                                    <Setter Property="BorderThickness"
                                            Value="1" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ComboBox}">
                                                <Grid>
                                                    <!-- FUNDO COM CANTO ARREDONDADO -->
                                                    <Border x:Name="Chrome"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6" />

                                                    <!-- BOTÃO QUE OCUPA TUDO, MAS TRANSPARENTE -->
                                                    <ToggleButton x:Name="ToggleButton"
                                                                  Background="Transparent"
                                                                  BorderBrush="Transparent"
                                                                  BorderThickness="0"
                                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                                  ClickMode="Press"                                                                  
                                                                  Focusable="False">
                                                        <Grid>
                                                            <!-- Texto do selecionado -->
                                                            <ContentPresenter Margin="6,0,25,0"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Left"
                                                                              IsHitTestVisible="False"
                                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" />

                                                            <!-- Placeholder quando nada selecionado -->
                                                            <TextBlock x:Name="Placeholder"
                                                                       Margin="6,0,25,0"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="{DynamicResource Black}"
                                                                       Text="{TemplateBinding Text}"
                                                                       Visibility="Collapsed"
                                                                       IsHitTestVisible="False" />

                                                            <!-- Seta -->
                                                            <Path HorizontalAlignment="Right"
                                                                  VerticalAlignment="Center"
                                                                  Margin="0,0,8,0"
                                                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                                                  Fill="{DynamicResource BorderGray}" />
                                                        </Grid>
                                                    </ToggleButton>

                                                    <!-- Dropdown -->
                                                    <Popup x:Name="PART_Popup"
                                                           AllowsTransparency="True"
                                                           Focusable="False"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           Placement="Bottom"
                                                           PopupAnimation="Slide"
                                                           MinWidth="{TemplateBinding ActualWidth}">
                                                        <Border Background="White"
                                                                BorderBrush="{DynamicResource BorderGray}"
                                                                BorderThickness="1"
                                                                CornerRadius="6">
                                                            <ScrollViewer>
                                                                <ItemsPresenter />
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>

                                                <ControlTemplate.Triggers>
                                                    <!-- Placeholder visível quando nada selecionado -->
                                                    <Trigger Property="SelectedIndex"
                                                             Value="-1">
                                                        <Setter TargetName="Placeholder"
                                                                Property="Visibility"
                                                                Value="Visible" />
                                                    </Trigger>

                                                    <!-- (opcional) hover/foco -->
                                                    <Trigger Property="IsMouseOver"
                                                             Value="True">
                                                        <!--<Setter TargetName="Chrome" Property="Background" Value="{DynamicResource White}"/>-->
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                        <Button x:Name="ReconnectionButton"
                                Width="100"
                                Height="30"
                                Command="{Binding ConnectCommand}"
                                Content="{Binding ConnectButtonText}">
                        </Button>
                    </DockPanel>
                </DockPanel>

            </DockPanel>
        </Grid>
        <ContentControl
            Grid.Row="3"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Content="{Binding CurrentUserControl}" />
    </Grid>
</Window>
