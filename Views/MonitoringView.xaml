<UserControl
    x:Class="Intron.LaserMonitor.Views.MonitoringView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Intron.LaserMonitor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="clr-namespace:OxyPlot.SkiaSharp.Wpf;assembly=OxyPlot.SkiaSharp.Wpf"
    xmlns:viewModels="clr-namespace:Intron.LaserMonitor.ViewModels"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Padding="10"            
            BorderBrush="Gainsboro"
            BorderThickness="1"
            CornerRadius="5">

            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Stretch" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="Comandos:" />
                    <Button
                        x:Name="StartStopButton"
                        Width="100"
                        Height="30"
                        Margin="5,0,5,0"
                        Command="{Binding StartStopMeasurementCommand}"
                        Content="{Binding StartStopText}" />
                    <Button
                        x:Name="SetZeroButton"
                        Width="100"
                        Height="30"
                        Margin="5,0,5,0"
                        Command="{Binding ZeroOffsetCommand}"
                        Content="Zerar Medição" />
                    <Button
                        x:Name="ClearGraphButton"
                        Width="100"
                        Height="30"
                        Margin="5,0,5,0"
                        Command="{Binding ClearGraphCommand}"
                        Content="Limpar conteúdo" />
                    <Button
                        x:Name="ShowHideMarkers"
                        Width="100"
                        Height="30"
                        Margin="5,0,5,0"
                        Command="{Binding ShowHideMarkersCommand}"
                        Content="{Binding IsShowingMarkersText}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Padding" Value="14,8" />
                                <Setter Property="Margin" Value="6,0,0,0" />
                                <Setter Property="Background" Value="#2563EB" />
                                <Setter Property="BorderBrush" Value="#2563EB" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                ClipToBounds="True"
                                                CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1F4FC3" />

                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#1746B0" />
                                                </Trigger>
                                                <Trigger Property="IsDefault" Value="True">
                                                    <Setter Property="BorderBrush" Value="#2563EB" />
                                                </Trigger>
                                                <Trigger Property="Content" Value="Mostrar pontos">
                                                    <Setter Property="Background" Value="{DynamicResource BackgroundGray}" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                    <Setter Property="BorderBrush" Value="LightGray" />
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="LightGray" />
                                                    <Setter Property="Foreground" Value="Gray" />
                                                    <Setter Property="BorderBrush" Value="LightGray" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <Button
                    DockPanel.Dock="Right"
                    x:Name="ExportButton"
                    Width="100"
                    Height="30"
                    Margin="5,0,5,0"
                    HorizontalAlignment="Right" 
                    Command="{Binding ExportToExcelCommand}"
                    Content="Exportar Excel" />
            </DockPanel>

        </Border>

        <Border
            Grid.Row="1"
            Margin="0,10,0,0"
            Padding="10"
            BorderBrush="Gainsboro"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel Orientation="Horizontal">

                <TextBlock FontWeight="Bold" Text="Última Distância:" />
                <TextBlock
                    Margin="5,-2,0,0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="DarkBlue"
                    Text="{Binding CurrentDistance}" />
            </StackPanel>
        </Border>

        <oxy:PlotView
            Grid.Row="2"
            Margin="0,10,0,0"
            Controller="{Binding PlotController}"
            Model="{Binding PlotModel}" />
    </Grid>
</UserControl>
