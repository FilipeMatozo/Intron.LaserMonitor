<UserControl
    x:Class="Intron.LaserMonitor.Views.MonitoringView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Intron.LaserMonitor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:viewModels="clr-namespace:Intron.LaserMonitor.ViewModels"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Padding="10"
            BorderBrush="Gainsboro"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="Comandos:" />
                <Button
                    x:Name="StartStopButton"
                    Width="100"
                    Height="30"
                    Margin="5,0,5,0"
                    Command="{Binding StartStopMeasurementCommand}"
                    Content="{Binding StartStopText}" />
                <Button
                    x:Name="SetZeroButton"
                    Width="100"
                    Height="30"
                    Margin="5,0,5,0"
                    Command="{Binding ZeroOffsetCommand}"
                    Content="Zerar Medição" />
                <Button
                    x:Name="ExportButton"
                    Width="100"
                    Height="30"
                    Margin="5,0,0,0"
                    Command="{Binding ExportToExcelCommand}"
                    Content="Exportar Excel" />
                <Button
                    x:Name="ClearGraphButton"
                    Width="100"
                    Height="30"
                    Margin="5,0,0,0"
                    Command="{Binding ClearGraphCommand}"
                    Content="Limpar conteúdo" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Margin="0,10,0,0"
            Padding="10"
            BorderBrush="Gainsboro"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel Orientation="Horizontal">

                <TextBlock FontWeight="Bold" Text="Última Distância:" />
                <TextBlock
                    Margin="5,-2,0,0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="DarkBlue"
                    Text="{Binding CurrentDistance}" />
            </StackPanel>
        </Border>

        <oxy:PlotView
            Grid.Row="2"
            Margin="0,10,0,0"
            Model="{Binding PlotModel}" />
    </Grid>
</UserControl>
