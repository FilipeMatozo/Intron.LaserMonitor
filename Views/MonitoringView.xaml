<UserControl x:Class="Intron.LaserMonitor.Views.MonitoringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Intron.LaserMonitor.Views"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:viewModels="clr-namespace:Intron.LaserMonitor.ViewModels"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderBrush="Gainsboro"
                BorderThickness="1"
                Padding="10"
                CornerRadius="5">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="Porta COM:"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"
                           FontWeight="SemiBold" />

                <ComboBox ItemsSource="{Binding AvailablePorts}"
                          SelectedItem="{Binding SelectedPort}"
                          Width="120"
                          DropDownOpened="ComboBox_DropDownOpened"
                          IsEnabled="{Binding IsDisconnected}" />

                <Button Content="{Binding ConnectText}"
                        Command="{Binding ConnectDisconnectCommand}"
                        Margin="10,0,0,0"
                        Width="80" />
                <Button Content="Iniciar Medição"
                        Command="{Binding StartMeasurementCommand}"
                        Margin="30,0,0,0"
                        Background="#FFC7E8B5" />
                <Button Content="Parar Medição"
                        Command="{Binding StopMeasurementCommand}"
                        Margin="5,0,0,0"
                        Background="#FFE8B5B5" />
                <Button Content="Zerar Medição"
                        Command="{Binding ZeroOffsetCommand}"
                        Margin="5,0,0,0" />
                <Button Content="Exportar Excel"
                        Command="{Binding ExportToExcelCommand}"
                        Margin="30,0,0,0" />
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                BorderBrush="Gainsboro"
                BorderThickness="1"
                Padding="10"
                Margin="0,10,0,0"
                CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Status:"
                           FontWeight="Bold" />
                <TextBlock Text="{Binding IsConnectedText}"
                           Margin="5,0,20,0" />

                <TextBlock Text="Última Distância:"
                           FontWeight="Bold" />
                <TextBlock Text="{Binding CurrentDistance}"
                           Margin="5,0,0,0"
                           Foreground="DarkBlue"
                           FontWeight="SemiBold"
                           FontSize="14" />
            </StackPanel>
        </Border>

        <oxy:PlotView Grid.Row="2"
                      Model="{Binding PlotModel}"
                      Margin="0,10,0,0" />
    </Grid>
</UserControl>
